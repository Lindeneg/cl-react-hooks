{
  "name": "cl-react-hooks",
  "private": "true",
  "repository": "git@github.com:Lindeneg/cl-react-hooks.git",
  "author": "lindeneg <christian@lindeneg.org>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:js && yarn run build:ts && yarn run custom:run && yarn run move:ts",
    "build:js": "lerna exec -- rollup -c ../../rollup.config.js",
    "build:ts": "lerna exec -- tsc --project ../../tsconfig-prod.json --declaration --emitDeclarationOnly",
    "move:ts": "lerna exec -- mv *.d.ts dist",
    "custom:run": "lerna exec -- yarn custom",
    "clean": "lerna exec -- rm -rf dist",
    "dev": "lerna exec ts-node",
    "pub": "lerna publish",
    "test": "jest --verbose",
    "lint": "yarn prettier ./packages --check",
    "lint:fix": "yarn prettier ./packages --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "jest": "^27.4.7",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {}
}
