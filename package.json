{
  "name": "lindeneg-npm-packages",
  "private": "true",
  "repository": "git@github.com:Lindeneg/lindeneg-npm-packages.git",
  "author": "lindeneg <christian@lindeneg.org>",
  "license": "MIT",
  "scripts": {
    "build": "bash ./build.sh",
    "clean": "lerna exec --parallel -- rm -rf dist",
    "reset": "rm yarn.lock && lerna exec --parallel -- rm -rf dist node_modules && yarn run bs",
    "bs": "yarn install && lerna bootstrap && yarn run build",
    "dev": "ts-node",
    "pub": "yarn run pub:prepare && yarn run pub:deploy",
    "ghcov": "yarn run ghcov:prepare && yarn run ghcov:deploy",
    "ghcov:prepare": "yarn run prepare:all && yarn run test:js",
    "ghcov:deploy": "gh deploy -d coverage/lcov-report",
    "pub:prepare": "yarn run prepare:all && yarn run test",
    "pub:deploy": "lerna publish",
    "prepare:all": "yarn run clean && yarn run lint && yarn run build",
    "test": "yarn run test:js && yarn run test:ts",
    "test:js": "jest",
    "test:ts": "lerna exec --scope=@lindeneg/types yarn test",
    "lint": "yarn eslint ./packages",
    "lint:fix": "yarn eslint ./packages --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.4.7",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^19.0.0",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {},
  "dependencies": {}
}
